<Window x:Class="ExtendedControl.Views.StartUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bc="clr-namespace:NTW.Controls.Behaviours;assembly=NTW.Controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True" AllowsTransparency="True"
        mc:Ignorable="d"
        bc:WindowPositionBehaviour.WindowPosition="None"
        bc:WindowVisibilityBehaviour.CloseByHidden="True"
        Title="StartUpWindow" Height="250" Width="500">
    <Grid>
        <Image Name="img"
                       gif:ImageBehavior.AnimatedSource="pack://application:,,,/images/Gif/Newload.gif"
                       gif:ImageBehavior.RepeatBehavior="Forever"
                       gif:ImageBehavior.AutoStart="True" />
        <TextBlock Text="Extended" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" TextAlignment="Center" FontSize="30" FontFamily="Tahoma" Margin="115,24,216,0" />
        <TextBlock Text="Control" VerticalAlignment="Top" FontWeight="Bold" Foreground="DodgerBlue" TextAlignment="Center" FontSize="30" FontFamily="Tahoma" Margin="241,36,117,0" />
    </Grid>
</Window>
