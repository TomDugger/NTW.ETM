<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:y="clr-namespace:System;assembly=mscorlib">
    
    <RelativeSource x:Key="WindowSource" Mode="FindAncestor" AncestorType="{x:Type Window}" />
    <RelativeSource x:Key="GridSource" Mode="FindAncestor" AncestorType="{x:Type Grid}" />
    <RelativeSource x:Key="ItemsControlSource" Mode="FindAncestor" AncestorType="{x:Type ItemsControl}" />
</ResourceDictionary>